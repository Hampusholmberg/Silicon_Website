




<section class="sign-in">

    <div class="container">

        <div class="content-box">

            <h1>Welcome Back</h1>

            <p>Don’t have an account yet? <a>Sign up here.</a></p>

            <form name="sign-in-form" id="sign-in-form">

                <div class="input-div email-input">
                    <label for="sign-in-form-email">Email</label>
                    <input id="sign-in-form-email" placeholder="Enter your email address" type="email" />
                </div>

                <div class="input-div password-input">
                    <label for="sign-in-form-password">Password</label>
                    <input id="sign-in-form-password" placeholder="********" type="password" />
                </div>

                <div class="checkbox-div">
                    <input type="checkbox" id="sign-in-form-remember-me-checkbox" />
                    <label for="sign-in-form-remember-me-checkbox">Remember me</label>
                </div>
               
                <button class="btn-theme">Sign in</button>

            </form>


            <div class="bottom">

                <a href="#">Forgot your password?</a>
                <div class="line-top">
                    <p>Or sign in with your social network</p>

                    <div class="buttons">
                        <button class="btn-gray"><i class="fa-brands fa-google"></i> Google</button>
                        <button class="btn-gray"><i class="fa-brands fa-facebook-f"></i> Facebook</button>
                    </div>
                </div>



            </div>


        </div>

    </div>


</section>


