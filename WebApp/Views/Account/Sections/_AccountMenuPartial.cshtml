@model AccountViewModel

<div class="account-menu">

    <div class="account-details">

        <img src="@Model.ProfilePicture?.ImageUrl" alt="@Model.ProfilePicture?.AltText"/>
        <p class="user-name">@Model.FirstName @Model.LastName</p>
        <p class="user-email">@Model.Email</p>
    </div>

    <div class="account-nav">

        <a asp-controller="Account" asp-action="AccountDetails" class="account-nav-link"><i class="fa-solid fa-gear"></i> Account Details</a>
        <a asp-controller="Account" asp-action="AccountSecurity" class="account-nav-link"><i class="fa-solid fa-lock"></i> Security</a>
        <a asp-controller="Account" asp-action="SavedItems" class="account-nav-link"><i class="fa-solid fa-bookmark"></i> Saved Courses</a>
        <a class="account-nav-link"><i class="fa-solid fa-arrow-right-from-bracket"></i> Sign Out</a>
    
    </div>

</div>




