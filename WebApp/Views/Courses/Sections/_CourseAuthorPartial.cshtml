@model CourseViewModel

<section class="course-author">


    <div class="container">
        <div class="img-div">
            <img src="@Model.Author.Image.ImageUrl" alt="@Model.Author.Image.AltText" />
        </div>

        <div class="content-box">

            <p>Learn from the best</p>
            <h3>@Model.Author.Name</h3>
            <p>@Model.Author.Description</p>

            <div class="buttons">
                <button class="btn-theme btn-youtube"><i class="fa-brands fa-youtube"></i> @Model.Author.YoutubeFollowersQty k subscribers</button>
                <button class="btn-theme btn-facebook"><i class="fa-brands fa-square-facebook"></i> @Model.Author.YoutubeFollowersQty k subscribers</button>
            </div>
        </div>

        




    </div>

</section>